CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm -f

all: ${NAME}

${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

main.o: main.c m.h
	${CC} -c -O main.c main.c

school.o: school.c m.h
	${CC} -c -o school.c school.o

clean:
	${RM} ${NAME}
	${RM} *~ \#*\# *.swp

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
